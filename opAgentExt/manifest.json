{
    "manifest_version": 3,
    "name": "opAgent",
    "version": "1.0",
    "description": "A smart assistant that helps you save money while shopping online",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
      }
    },
    "permissions": ["activeTab", "storage"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_title": "opAgent"
    }
  }
  